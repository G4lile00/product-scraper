{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "node_modules/**/*",
      "build/**/*"
    ],
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 1,
    "lineWidth": 90,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "node_modules/**/*",
      "build/**/*"
    ]
  }
}
